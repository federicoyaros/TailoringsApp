<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:weightSum="1"
    android:background="#ff000000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nuevo proyecto"
        android:id="@+id/textView"
        android:textSize="@dimen/abc_dialog_padding_material"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nombre:"
        android:id="@+id/textView2"
        android:layout_gravity="left"
        android:textColor="#ffffffff" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etNombre"
        android:backgroundTint="#ffffffff"
        android:textColor="#ffffffff"
        android:maxLength="30" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Responsable:"
        android:id="@+id/textView3"
        android:layout_gravity="left"
        android:textColor="#ffffffff" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etResponsable"
        android:backgroundTint="#ffffffff"
        android:textColor="#ffffffff"
        android:maxLength="30" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Socio a cargo:"
        android:id="@+id/textView4"
        android:layout_gravity="left"
        android:textColor="#ffffffff" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etSocio"
        android:backgroundTint="#ffffffff"
        android:textColor="#ffffffff"
        android:maxLength="30" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="MetodologÃ­a:"
        android:id="@+id/textView5"
        android:layout_gravity="left"
        android:textColor="#ffffffff" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="41dp"
        android:id="@+id/spinnerMetodologia"
        android:background="#fffdfdfe" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:weightSum="1"
        android:layout_weight="0.37">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CREAR"
            android:id="@+id/btnCrear"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_weight="0.29"
            android:onClick="onClickCrearProyecto" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volver"
            android:id="@+id/btnVolver"
            android:layout_weight="0.29"
            android:onClick="onClickVolverNuevoProyecto"
            android:layout_gravity="bottom|center_horizontal" />
    </LinearLayout>

</LinearLayout>